-- The loop
game_objects = {}
actions = {}

function _update()
	for go in all(game_objects) do
		go:update()
	end
	for c in all(actions) do
		if costatus(c) then
		  coresume(c)
		else
		  del(actions,c)
		end
	  end
end

function _draw()
	cls(0)
	for go in all(game_objects) do
		go:draw()
	end
end
